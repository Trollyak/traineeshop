@model CarViewModel;
@{
    ViewData["Title"] = "AddCar";
    var compan=new SelectList( Model.Companies, "Name", "Name" );
}

<h1>Car</h1>
<form method="post">
    <p>Имя</p>
    <input type="text" class="form-control" asp-for="Car.Name" />
    <p>Цена</p>
    <select asp-for="Car.Company" asp-items="compan" class="form-control"></select>
    <p>Описание</p>
    <input type="text" class="form-control" asp-for="Car.Description" />
    <p>Цена</p>
    <input type="text" class="form-control" asp-for="Car.Price" />

    <br />
    <button class="btn btn-success">Отправить</button>
</form>


